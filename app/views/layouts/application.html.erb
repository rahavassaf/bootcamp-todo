<!DOCTYPE html>
<html>
  <head>
    <title>Todo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>

    <div id="user-console">
      <% if user_signed_in? %>
        <%= current_user.email %>
        <br>
        <%= link_to  'Sign Out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to  'Sign In', new_user_session_path %>
      <% end %>
    </div>
  </body>
</html>
